<Window x:Class="Prodopt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prodopt"
        mc:Ignorable="d"
        Title="Prodopt" MinHeight="450" MinWidth="800" MaxHeight="800" MaxWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" ></RowDefinition>
            <RowDefinition Height="*" ></RowDefinition>
        </Grid.RowDefinitions>
        <Border Background="#FF4C4750"/>
        <Image Source="/res/prlogo.png" Grid.Row="0" HorizontalAlignment="Left"/> 
        <TextBlock FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"  FontFamily="Arial Black" Grid.Row="0">ПРОДОПТ-РЕГИОН</TextBlock>
        <Button Grid.Row="0" HorizontalAlignment="Right" Name="autobnt" Click="autorizacia" Width="100">Авторизация</Button>
        <Frame Grid.Row="1" Name="MainFrame"></Frame>
        <TextBlock x:Name="TimerTextBlock" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="0"/>
    </Grid>
</Window>
